@using Application.Interfaces
@inject IJournalService JournalService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Category" Class="mr-2" />
            Add New Category
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_categoryName"
                      Label="Category Name"
                      Variant="Variant.Outlined"
                      Immediate="true"
                      MaxLength="200"
                      Required="true"
                      RequiredError="Category name is required"
                      OnKeyDown="OnKeyDown" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled"
                   OnClick="Submit"
                   Disabled="@string.IsNullOrWhiteSpace(_categoryName)">
            Add Category
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private string _categoryName = string.Empty;

    private void Cancel() => MudDialog.Cancel();

    private void Submit()
    {
        if (!string.IsNullOrWhiteSpace(_categoryName))
        {
            MudDialog.Close(DialogResult.Ok(_categoryName.Trim()));
        }
    }

    private void OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(_categoryName))
        {
            Submit();
        }
    }
}
